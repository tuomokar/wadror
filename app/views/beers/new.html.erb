<h1>New beer</h1>



<%= form_for(@beer) do |f| %>
    Name:
    <p><%= f.text_field :name %></p>
    Style:

  <p>
    <%= f.select :style, options_for_select(@styles) %>
  </p>

    Brewery:
    <p><%= f.select :brewery_id, options_from_collection_for_select(@breweries, :id, :to_s) %></p>

    <p><%= f.submit %></p>
<% end %>

<%= link_to 'Back', beers_path %>
