<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
</h2>

<p>
  <% if @user.ratings.empty? %>
      hasn't made any ratings yet
  <% else %>
      has <%= pluralize(@user.ratings.count, 'rating') %> with an average of <%= @user.average_rating %>
      </p>
      <p>favorite beer: <%= @user.favorite_beer %></p>
      <p>favorite style: <%= @user.favorite_style %></p>
      <p>favorite brewery: <%= @user.favorite_brewery %></p>
  <% end %>



  <% unless @user.beer_clubs.empty? %>
      <p>
        member of
        <% @user.beer_clubs.each do |club| %>
            <%= link_to club.name, club %>
        <% end %>
      </p>
  <% end %>



  <h3>Ratings</h3>

  <% @user.ratings.each do |rating| %>
      <li>
        <%= rating.beer.name %>, <%= rating.score %>
        <% if @user == current_user %>
            <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' }%>
        <% end %>
      </li>
  <% end %><br>

  <div class="btn-group">

    <% if @user == current_user %>
        <%= link_to('Edit', edit_user_path(@user), class:"btn btn-default") %>
        <%= link_to('Destroy', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-default") %>
    <% end %>
    <%= link_to 'Back', users_path, class:"btn btn-default" %>

  </div>

